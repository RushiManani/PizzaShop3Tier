@model PizzaShop.DAL.ViewModel.ResetPassword
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!DOCTYPE html>
<html>

<head>
   <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/resetPasswordPage.css">

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row loginPage">
            <div class="col-lg-6 col-md-12 p-0">
                <img src="~/images/dominos_background.jpg" alt="" class="dominos-bg-img">
            </div>
            <div class="col-lg-6 col-md-12 p-0">
                <div class="container-fluid login-right" style="background-color: #D8EFF7;">
                    <div class="row">
                        <div class="col-5 align-self-center text-end">
                            <img src="~/images/logos/pizzashop_logo.png" alt="" class="shop-logo-img">
                        </div>
                        <div class="col-7 align-self-center">
                            <span class="h2 fw-bold" style="color: #0565A0;">PIZZASHOP</span>
                        </div>
                    </div>
                    <div class="row ms-4 mt-4 ps-4 pe-4">
                        <div class="col ps-4 pe-4">
                            <span class="h4">Reset Your Password</span>
                        </div>
                    </div>
                    <div class="row mt-2 ms-4 me-4 ps-4 pe-4">
                        <div class="col ps-4 pe-4">
                            <form class="mt-3" method="post" asp-controller="Auth" asp-action="ResetPassword">
                                <input type="hidden" asp-for="@Model.Token" value="@ViewData["ResetToken"]">
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col d-flex align-items-center position-relative">
                                            <input type="password" class="form-control" id="exampleInputPassword1"
                                                placeholder="New Password" asp-for="@Model.NewPassword" required>
                                            <i class="bi bi-eye position-absolute h4 " id="eye1"
                                                style="right: 20px; top: 5px;" onclick="togglePassword()"></i>
                                        </div>
                                        <div>
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col d-flex align-items-center position-relative">
                                            <input type="password" class="form-control" id="exampleInputPassword2"
                                                placeholder="Confirm New Password" asp-for="@Model.ConfirmPassword"
                                                required>
                                            <i class="bi bi-eye position-absolute h4 " id="eye2"
                                                style="right: 20px; top: 5px;" onclick="toggleConfirmPassword()"></i>
                                        </div>
                                        <div>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                    </div>

                                </div>
                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary login-button">Submit</button>
                                </div>
                            </form>
                            <div class="mb-3 mt-2">
                                <a type="submit" asp-action="User_Login" asp-controller="Auth" class="btn login-button text-primary">Back
                                    to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    function togglePassword() {
        var x = document.getElementById("exampleInputPassword1");
        var eye = document.getElementById("eye1");
        if (x.type === "password") {
            x.type = "text";
            eye.classList.remove("bi-eye");
            eye.classList.add("bi-eye-slash");
            console.log("Password show");

        } else {
            x.type = "password";
            eye.classList.remove("bi-eye-slash");
            eye.classList.add("bi-eye");
            console.log("Password hide");

        }
    }
    function toggleConfirmPassword() {
        var x = document.getElementById("exampleInputPassword2");
        var eye = document.getElementById("eye2");
        if (x.type === "password") {
            x.type = "text";
            eye.classList.remove("bi-eye");
            eye.classList.add("bi-eye-slash");
            console.log("Password show");

        } else {
            x.type = "password";
            eye.classList.remove("bi-eye-slash");
            eye.classList.add("bi-eye");
            console.log("Password hide");

        }
    }
</script>

</html>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}