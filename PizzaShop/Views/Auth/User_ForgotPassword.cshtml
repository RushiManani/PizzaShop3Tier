@model PizzaShop.DAL.ViewModel.ForgotPassword
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/Login.css">

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row loginPage">
            <div class="col-lg-6 col-md-12 p-0">
                <img src="~/images/dominos_background.jpg" alt="" class="dominos-bg-img">
            </div>
            <div class="col-lg-6 col-md-12 p-0">
                <div class="container-fluid login-right" style="background-color: #D8EFF7;">
                    <div class="row pb-4">
                        <div class="col-5 align-self-center text-end">
                            <img src="~/images/logos/pizzashop_logo.png" alt="" class="shop-logo-img">
                        </div>
                        <div class="col-7 align-self-center">
                            <span class="h2 fw-bold" style="color: #0565A0;">PIZZASHOP</span>
                        </div>
                    </div>
                    <div class="row ms-4 mt-4 ps-4 pe-4">
                        <div class="col ps-4 pe-4">
                            <span class="h4">Forgot Password</span>
                        </div>
                    </div>
                   
                    <div class="row ms-4 mt-4 ps-4 pe-4">
                        <div class="col ps-4 pe-4 tetx-light">
                            <span>Enter your email and we'll send you a link to reset your password.</span>
                        </div>
                    </div>
                    <div class="row mt-1 ms-4 me-4 ps-4 pe-4">
                        <div class="col ps-4 pe-4">
                            <form class="mt-3" method="post" asp-action="ForgotPassword" asp-controller="Auth">
                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col">
                                            <input type="email" class="form-control" id="exampleInputEmail1"
                                                aria-describedby="emailHelp" placeholder="Email" asp-for="@Model.Email"
                                                required>
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <button type="submit" 
                                        class="btn btn-primary login-button">Send</button>
                                </div>
                            </form>
                            <div class="mb-3 mt-2">
                                <a asp-controller="Auth" asp-action="User_login"
                                    class="btn login-button text-primary">Back
                                    to Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}