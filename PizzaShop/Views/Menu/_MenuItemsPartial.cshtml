    var filePhoto;

    $(document).ready(function() {
        $("#fileUpload").on('change', function() {
            var fileInput = document.getElementById('fileUpload');
            filePhoto = fileInput.files[0];
            console.log("Selected file: ", filePhoto);
        });

        $("#addItemBtn").on('click', function() {
            var isAvailable = $("#isavailable").val() == "on" ? true : false;
            var isDefaultTax = $("#defaulttax").val() == "on" ? true : false;

            var formData = new FormData();
            formData.append('CategoryId', $("#categorydd").val());
            formData.append('ItemName', $("#itemName").val());
            formData.append('ItemTypeId', $("#itemtypedd").val());
            formData.append('Rate', $("#rate").val());
            formData.append('Quantity', $("#quantity").val());
            formData.append('UnitId', $("#unitdd").val());
            formData.append('IsAvailable', isAvailable);
            formData.append('IsDefaultTax', isDefaultTax);
            formData.append('TaxPercentage', $("#taxpercentage").val());
            formData.append('ShortCode', $("#shortcode").val());
            formData.append('Description', $("#description").val());

            if (filePhoto) {
                formData.append('ItemPhoto', filePhoto);
            }

            $.ajax({
                url: '@Url.Action("AddMenuItem", "Menu")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function(result) {
                    location.reload();
                },
                error: function(error) {
                    console.error('Error loading partial view:', error);
                }
            });
        });
    });

    // When the delete button is clicked, set the item ID in the modal
    $('.delete-item').on('click', function () {
        var itemId = $(this).data('id');
        $('#deleteItemId').val(itemId);
    });

    // Handle the delete confirmation button click
    $('#confirmItemDelete').on('click', function () {
        var itemId = $('#deleteItemId').val();
        $.ajax({
            url: '/Menu/DeleteMenuItem',
            type: 'POST',
            data: { id: itemId },
            success: function (result) {
                location.reload();
            },
            error: function (error) {
                alert('Error deleting user');
            }
        });
    });

