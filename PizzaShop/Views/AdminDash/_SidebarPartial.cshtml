<div class="sidebar">
    <div class="container-fluid ps-0 pe-0">
        <div class="row pt-3 mx-auto">
            <div class="col-4 align-self-center text-end">
                <img src="~/images/logos/pizzashop_logo.png" alt="" class="shop-logo-img">
            </div>
            <div class="col-8 align-self-center">
                <span class="pizza-shop-title h4 fw-bold ps-2 gloabal-color">PIZZASHOP</span>
            </div>
        </div>
        <div class="row ms-0 me-0 sidebar-items">
            <div class="col  bg-white">
                <ul class="list-unstyled mt-4">
                    <li class="list-item @(ViewBag.Active == "Dashboard"?"active-sidebar":"")">
                        <a asp-action="Index" asp-controller="AdminDash" class="text-decoration-none text-reset  "
                            alt="">
                            <i class="bi bi-border-all @(ViewBag.Active == "Dashboard"?"active-icon":"")"></i>
                            <span class="sidebar-list-title ms-3">Dashboard</span>
                        </a>
                    </li>
                    <li class="list-item @(ViewBag.Active == "User"?"active-sidebar":"")">
                        <a asp-action="User_ListView" asp-controller="User" class="text-decoration-none text-reset"
                            alt="">
                            <i class="bi bi-people @(ViewBag.Active == "User"?"active-icon":"")"></i>
                            <span class="sidebar-list-title ms-3">Users</span>
                        </a>
                    </li>
                    <li class="list-item @(ViewBag.Active == "Role"?"active-sidebar":"")">
                        <a asp-action="RoleView" asp-controller="RoleAndPermission"
                            class="text-decoration-none text-reset " alt="">
                            <i class="bi bi-person-plus @(ViewBag.Active == "Role"?"active-icon":"")"></i>
                            <span class="sidebar-list-title ms-3">Roles and Permissions</span>
                        </a>
                    </li>
                    <li class="list-item  @(ViewBag.Active == "Menu"?"active-sidebar":"")">
                        <a asp-action="Index" asp-controller="Menu" class="text-decoration-none text-reset" alt="">
                            <i class="bi bi-list @(ViewBag.Active == "Role"?"active-icon":"")"></i>
                            <span class="sidebar-list-title ms-3">Menu</span>
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="#" class="text-decoration-none text-reset" alt="">
                            <i class="bi bi-table"></i>
                            <span class="sidebar-list-title ms-3">Table and Sections</span>
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="#" class="text-decoration-none text-reset" alt="">
                            <i class="bi bi-receipt"></i>
                            <span class="sidebar-list-title ms-3">Taxes and Fees</span>
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="#" class="text-decoration-none text-reset" alt="">
                            <i class="bi bi-box"></i>
                            <span class="sidebar-list-title ms-3">Orders</span>
                        </a>
                    </li>
                    <li class="list-item">
                        <a href="#" class="text-decoration-none text-reset" alt="">
                            <i class="bi bi-person-circle"></i>
                            <span class="sidebar-list-title ms-3">Customers</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

